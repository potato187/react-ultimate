{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"baseUrl": "./",
		"paths": {
			"@": ["src"],
			"@assets": ["src/assets/*"],
			"@api": ["src/api/*"],
			"@constant": ["src/constant/*"],
			"@components/*": ["src/components/*"],
			"@routes/*": ["src/routes/*"],
			"@helpers/*": ["src/helpers/*"],
			"@hooks/*": ["src/hooks/*"],
			"@schema/*": ["src/schema/*"],
			"@redux/*": ["src/redux/*"],
			"@pages/*": ["src/pages/*"]
		}
	},
	"include": ["src/**/*"]
}
